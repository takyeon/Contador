<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAnadir"
        android:layout_width="163dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:onClick="incrementa"
        android:text="@string/anadir"
        app:layout_constraintBottom_toTopOf="@+id/btnQuitar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContador" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="163dp"
        android:layout_height="0dp"
        android:layout_marginBottom="169dp"
        android:onClick="reset"
        android:text="@string/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuitar" />

    <Button
        android:id="@+id/btnQuitar"
        android:layout_width="163dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:onClick="decremente"
        android:text="@string/quitar"
        app:layout_constraintBottom_toTopOf="@+id/btnReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnadir" />

    <TextView
        android:id="@+id/txtContador"
        android:layout_width="255dp"
        android:layout_height="0dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="143dp"
        android:gravity="center"
        android:text="@string/_0"
        android:textSize="42sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAnadir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>